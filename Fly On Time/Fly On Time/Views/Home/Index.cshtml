@{
    ViewBag.Title = "Fly On Time";
}
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/Home/APIcalls.js"></script>
<link href="~/Content/Home.css" rel="stylesheet" />


<div id="fsScheduleInputs">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="fsScheduleAirCode">Airline Code</label>
                <input type="text" id="fsScheduleAirCode" class="form-control" value="AA" placeholder="Enter airline code">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="fsScheduleFN">Flight Number</label>
                <input type="text" id="fsScheduleFN" class="form-control" value="80" placeholder="Flight Number">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label for="fsScheduleMonth">Flight Month</label>
                <input type="text" id="fsScheduleMonth" value="10" class="form-control" placeholder="Month">
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="fsScheduleDay">Flight Day</label>
                <input type="text" id="fsScheduleDay" class="form-control" placeholder="Day">
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="fsScheduleYear">Flight Year</label>
                <input type="text" id="fsScheduleYear" class="form-control" value="2017" placeholder="Year">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <button id="submitBtn" class="btn btn-lg btn-block btn-success">Submit</button>
        </div>
    </div>
</div>


<div class="row" id="flightBox">
    <div class="col-md-12">
        <p id="displayBox"></p>

    </div>
</div>
